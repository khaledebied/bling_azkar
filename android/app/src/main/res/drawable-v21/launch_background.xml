<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Beautiful gradient background matching app theme for Android 5.0+ -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#10B981"
                android:centerColor="#14B8A6"
                android:endColor="#06B6D4" />
        </shape>
    </item>
    <!-- App icon/logo centered with smooth appearance -->
    <item>
        <bitmap android:gravity="center" android:src="@drawable/splash"/>
    </item>
</layer-list>
