<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Beautiful dark gradient background matching app dark theme for Android 5.0+ -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0F1419"
                android:centerColor="#1C2128"
                android:endColor="#1A1A1A" />
        </shape>
    </item>
    <!-- App icon/logo centered with smooth appearance -->
    <item>
        <bitmap android:gravity="center" android:src="@drawable/splash"/>
    </item>
</layer-list>
